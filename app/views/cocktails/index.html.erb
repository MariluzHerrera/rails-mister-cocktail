<h1>Available cocktails</h1>

<div class="card-container">
<% @cocktails.each do |c| %>
  <div class="card" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1567671899076-51a64ddb7c5d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1524&q=80" class="card-img-top" alt="cocktail">
    <div class="card-body">
      <h5 class="card-title"><%= c.name  %></h5>
      <%= link_to "More info", cocktail_path(c), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
</div>
<br>
